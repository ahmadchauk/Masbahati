<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp"
        android:translationZ="2dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAbout" />

        <ImageView
            android:id="@+id/arabicImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:gravity="center"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/arabicTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arabicImg"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorAbout"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/meaningInvisible"
            android:layout_alignBottom="@+id/meaningInvisible"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dip"
            android:layout_marginEnd="5dip"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAbout" />

        <TextView
            android:id="@+id/meaningInvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arabicTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dip"
            android:layout_marginEnd="5dip"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorAbout"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>